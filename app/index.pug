                                td 11:00
                                td(data-mon="11")
                                td(data-tue="11")
                                td(data-wed="11")
                                td(data-thu="11")
                                td(data-fri="11")
                            tr
                                td 12:00
                                td(data-mon="12")
                                td(data-tue="12")
                                td(data-wed="12")
                                td(data-thu="12")
                                td(data-fri="12")
                            tr
                                td 13:00
                                td(data-mon="13")
                                td(data-tue="13")
                                td(data-wed="13")
                                td(data-thu="13")
