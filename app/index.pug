                                td(data-thu="18")
                                td(data-fri="18")
                    .delete
                        .delete__title Are you sure you want to delete 
                            span.delete__title-value
                            | event?
                        .delete__btns
                            button.delete__no No
                            button.delete__yes Yes
                    section.event
                        form.event__form
                            fieldset
                                .event__error
                                    img.event__warning(src="images/warning.svg" alt="warning icon")
                                    p Failed to create an event. Time slot is alredy booked.
                                    img.event__close(src="images/close.svg" alt="close icon")
                                .event__inputs
                                    label(for="descr") Name of the event:
                                    input.event__descr(type="text" name="descr")
                                    label(for="person") Participiants:
                                    .select.event__select
                                        select.event__name(name="person")
                                            option(value="All") Maria, Bob, Alex
                                            option(value="Maria") Maria
                                            option(value="Bob") Bob
                                            option(value="Alex") Alex
                                    label(for="day") Day:
                                    .select.event__select
                                        select.event__day(name="day")
                                            option(value="mon") Monday
                                            option(value="tue") Tuesday
                                            option(value="wed") Wednesday
                                            option(value="thu") Thursday
                                            option(value="fri") Friday
                                    label(for="time") Time:
                                    .select.event__select
                                        select.event__time(name="time")
                                            option(value="10") 10:00
                                            option(value="11") 11:00
                                            option(value="12") 12:00
                                            option(value="13") 13:00
                                            option(value="14") 14:00
                                            option(value="15") 15:00
                                            option(value="16") 16:00
                                            option(value="17") 17:00
                                            option(value="18") 18:00
                                .event__btns
                                    button.event__btn.event__cancel Cancel
                                    button.event__btn.event__create Create








            .footer
